<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cxp.learningvideo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:name=".MainApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SimpleRenderActivity"/>
        <activity android:name=".SimplePlayerActivity"/>
        <activity android:name=".OpenGLPlayerActivity"/>
        <activity android:name=".MultiOpenGLPlayerActivity"/>
        <activity android:name=".EGLPlayerActivity"/>
        <activity android:name=".SoulPlayerActivity"/>
        <activity android:name=".SynthesizerActivity"/>
        <activity android:name=".FFmpegActivity" />
        <activity android:name=".FFmpegGLPlayerActivity" />
        <activity android:name=".FFRepackActivity" />
        <activity android:name=".FFEncodeActivity" />
    </application>

</manifest>